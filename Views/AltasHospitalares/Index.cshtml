@model IEnumerable<Hospisim.Models.AltaHospitalar>

@{
    ViewData["Title"] = "Histórico de Altas Hospitalares";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Paciente</th>
            <th>Data da Alta</th>
            <th>Condição na Alta</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Internacao.Atendimento.Paciente.NomeCompleto</td>
                <td>@item.DataAlta.ToString("dd/MM/yyyy")</td>
                <td>@item.CondicaoPaciente</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" title="Detalhes"><i class="fa-solid fa-circle-info"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>