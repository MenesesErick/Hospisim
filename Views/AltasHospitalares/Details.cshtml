@model Hospisim.Models.AltaHospitalar

@{
    ViewData["Title"] = "Detalhes da Alta";
}SSS

<h1>@ViewData["Title"]</h1>
<div>
    <h4>Paciente: @Model.Internacao.Atendimento.Paciente.NomeCompleto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataAlta)</dt>
        <dd class="col-sm-9">@Model.DataAlta.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CondicaoPaciente)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.CondicaoPaciente)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.InstrucoesPosAlta)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.InstrucoesPosAlta)</dd>
    </dl>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
</div>