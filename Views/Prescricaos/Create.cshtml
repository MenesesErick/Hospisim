@model Hospisim.Models.Prescricao

@{
    ViewData["Title"] = "Nova Prescrição";
}

<h1>@ViewData["Title"]</h1>
<h4>Para o atendimento selecionado</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="AtendimentoId" />

            <div class="form-group mb-3">
                <label asp-for="Medicamento" class="control-label"></label>
                <input asp-for="Medicamento" class="form-control" />
                <span asp-validation-for="Medicamento" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Dosagem" class="control-label"></label>
                <input asp-for="Dosagem" class="form-control" />
                <span asp-validation-for="Dosagem" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Frequencia" class="control-label"></label>
                <input asp-for="Frequencia" class="form-control" />
                <span asp-validation-for="Frequencia" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ViaAdministracao" class="control-label">Via de Administração</label>
                <select asp-for="ViaAdministracao" class="form-control">
                    <option value="">Selecione...</option>
                    <option value="Oral">Oral</option>
                    <option value="Intravenosa">Intravenosa</option>
                    <option value="Intramuscular">Intramuscular</option>
                    <option value="Tópica">Tópica</option>
                    <option value="Subcutânea">Subcutânea</option>
                </select>
                <span asp-validation-for="ViaAdministracao" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DataInicio" class="control-label">Data de Início</label>
                <input asp-for="DataInicio" type="datetime-local" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DataFim" class="control-label">Data de Término (Opcional)</label>
                <input asp-for="DataFim" type="datetime-local" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Observacoes" class="control-label">Observações</label>
                <textarea asp-for="Observacoes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="StatusPrescricao" class="control-label">Status da Prescrição</label>
                <select asp-for="StatusPrescricao" class="form-control">
                    <option value="Ativa">Ativa</option>
                    <option value="Suspensa">Suspensa</option>
                    <option value="Encerrada">Encerrada</option>
                </select>
                <span asp-validation-for="StatusPrescricao" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ProfissionalId" class="control-label">Profissional Responsável</label>
                <select asp-for="ProfissionalId" class="form-control" asp-items="ViewBag.ProfissionalId">
                    <option value="">-- Selecione um Profissional --</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar Prescrição" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Atendimentos" asp-action="Details" asp-route-id="@Model.AtendimentoId">Cancelar e Voltar ao Atendimento</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
