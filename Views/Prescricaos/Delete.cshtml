@model Hospisim.Models.Prescricao

@{
    ViewData["Title"] = "Deletar Prescrição";
}

<h1>@ViewData["Title"]</h1>

<h3 class="text-danger mt-4">Você tem certeza que quer deletar esta prescrição?</h3>
<div>
    <hr />
    <h4>Prescrição a ser Deletada:</h4>
    <dl class="row">
        <dt class="col-sm-3">Paciente</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Atendimento.Paciente.NomeCompleto)</dd>

        <dt class="col-sm-3">Medicamento</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Medicamento)</dd>

        <dt class="col-sm-3">Data da Prescrição</dt>
        <dd class="col-sm-9">@Model.DataInicio.ToString("dd/MM/yyyy")</dd>
    </dl>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sim, Deletar" class="btn btn-danger" />
        <a asp-controller="Atendimentos" asp-action="Details" asp-route-id="@Model.AtendimentoId" class="btn btn-secondary">Cancelar</a>
    </form>
</div>