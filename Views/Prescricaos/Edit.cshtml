@model Hospisim.Models.Prescricao

@{
    ViewData["Title"] = "Editar Prescrição";
}

<h1>@ViewData["Title"]</h1>
<h4>Medicamento: <strong>@Model.Medicamento</strong></h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="AtendimentoId" />

            <input type="hidden" asp-for="Medicamento" />
            <input type="hidden" asp-for="Dosagem" />
            <input type="hidden" asp-for="Frequencia" />
            <input type="hidden" asp-for="ViaAdministracao" />
            <input type="hidden" asp-for="DataInicio" />
            <input type="hidden" asp-for="ProfissionalId" />

            <div class="form-group mb-3">
                <label asp-for="StatusPrescricao" class="control-label"></label>
                <select asp-for="StatusPrescricao" class="form-select">
                    <option value="Ativa">Ativa</option>
                    <option value="Suspensa">Suspensa</option>
                    <option value="Encerrada">Encerrada</option>
                </select>
                <span asp-validation-for="StatusPrescricao" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Observacoes" class="control-label"></label>
                <textarea asp-for="Observacoes" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
                <a asp-controller="Atendimentos" asp-action="Details" asp-route-id="@Model.AtendimentoId" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>