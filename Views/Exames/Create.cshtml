@model Hospisim.Models.Exame

@{
    ViewData["Title"] = "Solicitar Novo Exame";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="AtendimentoId" />
            <input type="hidden" asp-for="DataSolicitacao" />
            <input type="hidden" asp-for="Status" />

            <div class="form-group mb-3">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" placeholder="Ex: Hemograma Completo, Raio-X do Tórax..." />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar Solicitação" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Atendimentos" asp-action="Details" asp-route-id="@Model.AtendimentoId">Cancelar e Voltar ao Atendimento</a>
</div>