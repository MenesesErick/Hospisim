@model Hospisim.Models.Exame

@{
    ViewData["Title"] = "Deletar Solicitação de Exame";
}

<h1>@ViewData["Title"]</h1>

<h3 class="text-danger mt-4">Você tem certeza que quer deletar esta solicitação?</h3>

<div>
    <hr />
    <h4>Exame a ser Deletado:</h4>
    <dl class="row">
        <dt class="col-sm-3">Paciente</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Atendimento.Paciente.NomeCompleto)</dd>

        <dt class="col-sm-3">Tipo de Exame</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Tipo)</dd>

        <dt class="col-sm-3">Data da Solicitação</dt>
        <dd class="col-sm-9">@Model.DataSolicitacao.ToString("dd/MM/yyyy")</dd>
    </dl>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sim, Deletar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>