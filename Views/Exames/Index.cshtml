@model IEnumerable<Hospisim.Models.Exame>

@{
    ViewData["Title"] = "Lista de Exames";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Index" method="get">
    <div class="input-group mb-3">
        <input type="text" name="SearchString" class="form-control" placeholder="Buscar por Paciente ou Tipo de Exame..." />
        <button class="btn btn-outline-primary" type="submit"><i class="fa-solid fa-magnifying-glass"></i> Buscar</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Limpar</a>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Paciente</th>
            <th>Tipo de Exame</th>
            <th>Data da Solicitação</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Atendimento.Paciente.NomeCompleto</td>
                <td>@item.Tipo</td>
                <td>@item.DataSolicitacao.ToString("dd/MM/yyyy")</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm" title="Editar/Adicionar Resultado"><i class="fa-solid fa-pencil"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" title="Detalhes"><i class="fa-solid fa-circle-info"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>