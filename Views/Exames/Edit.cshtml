@model Hospisim.Models.Exame

@{
    ViewData["Title"] = "Editar/Registrar Resultado do Exame";
}

<h1>@ViewData["Title"]</h1>
<h4>Exame de @Model.Tipo para o paciente <strong>@Model.Atendimento.Paciente.NomeCompleto</strong></h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Tipo" />
            <input type="hidden" asp-for="DataSolicitacao" />
            <input type="hidden" asp-for="AtendimentoId" />

            <div class="form-group mb-3">
                <label asp-for="DataRealizacao" class="control-label"></label>
                <input asp-for="DataRealizacao" class="form-control" type="date" />
                <span asp-validation-for="DataRealizacao" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-select">
                    <option value="Solicitado">Solicitado</option>
                    <option value="Realizado">Realizado</option>
                    <option value="Resultado Disponível">Resultado Disponível</option>
                    <option value="Cancelado">Cancelado</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Resultado" class="control-label"></label>
                <textarea asp-for="Resultado" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Resultado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>