@model Hospisim.Models.ProfissionalDeSaude

@{
    ViewData["Title"] = "Deletar Profissional";
}

<h1>@ViewData["Title"]</h1>

<h3 class="text-danger">Atenção! Você tem certeza que quer deletar este registro?</h3>
<div>
    <hr />
    <h4>Profissional a ser Deletado:</h4>
    <dl class="row">
        <dt class="col-sm-3">Nome Completo</dt>
        <dd class="col-sm-9">@Model.NomeCompleto</dd>

        <dt class="col-sm-3">Registro</dt>
        <dd class="col-sm-9">@Model.RegistroConselho</dd>
    </dl>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sim, Deletar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>