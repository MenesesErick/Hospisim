<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HOSPISIM</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hospisim.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="dashboard-container">
        <aside class="sidebar">
            <h2>HOSPISIM</h2>
            <nav>
                <ul>
                    <li><a asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"></i> Início</a></li>
                    <li><a asp-controller="Pacientes" asp-action="Index"><i class="fa-solid fa-users"></i> Pacientes</a></li>
                    <li><a asp-controller="ProfissionalDeSaudes" asp-action="Index"><i class="fa-solid fa-user-doctor"></i> Profissionais</a></li>
                    <li><a asp-controller="Atendimentos" asp-action="Index"><i class="fa-solid fa-heart-pulse"></i> Atendimentos</a></li>
                    <li><a asp-controller="Internacaos" asp-action="Index"><i class="fa-solid fa-bed-pulse"></i> Internações</a></li>
                </ul>
            </nav>
        </aside>

        <div class="main-content">
            <div class="container">
                <main role="main" class="pb-3">

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    @RenderBody()
                </main>
            </div>
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>