@model Hospisim.Models.Atendimento

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Atendimento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataHora)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataHora)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Local)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Local)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Paciente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Paciente.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Profissional)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Profissional.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prontuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prontuario.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<hr />
<h4>Prescrições deste Atendimento</h4>
<table class="table">
    @foreach (var prescricao in Model.Prescricoes)
    {
        <tr>
            <td>@prescricao.Medicamento</td>
            <td>@prescricao.Dosagem</td>
        </tr>
    }
</table>
<a asp-controller="Internacaos" asp-action="Create" asp-route-atendimentoId="@Model.Id" class="btn btn-danger">
    Registrar Internação
</a>

<a asp-controller="Prescricaos" asp-action="Create" asp-route-atendimentoId="@Model.Id" class="btn btn-success">Adicionar Nova Prescrição</a>
<a asp-controller="Exames" asp-action="Create" asp-route-atendimentoId="@Model.Id" class="btn btn-info">Solicitar Exame</a>
<a asp-controller="Exames" asp-action="Create" asp-route-atendimentoId="@Model.Id" class="btn btn-info text-white">Solicitar Novo Exame</a>
