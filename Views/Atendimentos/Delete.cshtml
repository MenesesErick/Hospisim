@model Hospisim.Models.Atendimento

@{
    ViewData["Title"] = "Deletar Atendimento";
}

<h1>@ViewData["Title"]</h1>

<h3 class="text-danger mt-4">Você tem certeza que quer deletar este atendimento?</h3>
<p class="lead">Esta ação não pode ser desfeita.</p>

<div>
    <hr />
    <h4>Atendimento a ser Deletado:</h4>
    <dl class="row">
        <dt class="col-sm-3">Paciente</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Paciente.NomeCompleto)</dd>

        <dt class="col-sm-3">Profissional</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Profissional.NomeCompleto)</dd>

        <dt class="col-sm-3">Data e Hora</dt>
        <dd class="col-sm-9">@Model.DataHora.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-3">Tipo</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Tipo)</dd>
    </dl>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sim, Deletar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>